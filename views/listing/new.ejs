<% layout("/layouts/boilerplate") %>

<div class="row">
    <div class="col-8 offset-2">
    <h3>Create new Listing</h3>
     <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" name="listing[title]" placeholder="Add a catchy title" class="form-control" required>
        </div>
       
        <div class="mb-3">
        <label for="description" class="form-label" >Description</label>
        <textarea name="listing[description]" placeholder="Enter description" required class="form-control" ></textarea>
        </div>
       

        <div class="mb-3">
         <label for="url" class="form-label">Upload Image:</label>
        <input type="file" name="listing[image]" placeholder="enter image url/link" class="form-control">
        </div>
        
    <div class="row">
            
        <div class="mb-3 col-md-4">
        <label for="price" class="form-label">Price</label>
        <input type="number" name="listing[price]" placeholder="1200" required class="form-control" >
        </div>

         <div class="mb-3 col-md-8">
        <label for="country" class="form-label">Country</label>
        <input type="text" name="listing[country]" required placeholder="India" class="form-control" >
        </div>
    </div>
    
 
        <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input type="text" name="listing[location]" placeholder="ahilyanagar,Maharashtra" class="form-control" >
        </div>

        <br><br>
        <button class="btn btn-dark add-btn"  type="submit">Add</button>
        <br><br>
     </form>
    </div>
</div>

